<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/platform_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingStart="20dp"
            android:clickable="true" android:layout_width="180dp"
            android:layout_height="190dp" android:layout_margin="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:id="@+id/platform_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/antwerp_logo"
                    android:padding="10dp"
                    android:contentDescription="@string/image"/>
            <TextView
                    android:id="@+id/platform_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="@string/platform_title"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="10dp"/>
            <TextView
                    android:id="@+id/platform_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>