<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/backgroundcolor"
              tools:context=".fragments.project.ProjectPopularFragment">

    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:textStyle="bold" android:layout_height="wrap_content" android:textSize="20sp"
                  android:text="@string/project_pop" android:textAlignment="center"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp" android:background="@color/backgroundcolor">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_project_pop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/empty_recycler_text_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_empty"
                android:visibility="gone"
                android:textSize="25sp"
                android:layout_centerInParent="true"
        />
    </RelativeLayout>


    <LinearLayout
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:textStyle="bold" android:layout_height="wrap_content" android:textSize="20sp"
                  android:text="@string/project_rec" android:textAlignment="center"/>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp" android:background="@color/backgroundcolor">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_project_recent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/empty_recycler_text_rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_empty"
                android:visibility="gone"
                android:textSize="25sp"
                android:layout_centerInParent="true"
        />
    </RelativeLayout>
</LinearLayout>